class Solution {
public:
    vector<int> twoSum(vector<int>& nums, int target) {
        
       unordered_map<int,int> m;
        vector<int> ans;
        
        for(int i=0;i<nums.size();i++)
        {
            int t=target-nums[i];
            if(m.find(t)!=m.end())
            {
                ans.push_back(i);
                ans.push_back(m[t]);
                return ans;
            }
            m[nums[i]]=i;
        }
        
        return {0};
        
    }
};
