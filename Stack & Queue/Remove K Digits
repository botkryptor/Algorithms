class Solution {
public:
    
    
    
    string removeKdigits(string num, int k) {
       
        if(num.size()==k) return "0";
        for(int i=0;i<k;i++)
        {
            int j=0;
            while(j<num.size()-1 && num[j]<=num[j+1] )
                j++;
            
            num.erase(j,1);
        }
        
        while(num.size()>1 &&num[0]=='0')
        {
            num.erase(0,1);
        }
        if(num.size()==0) return "0";
        return num;
        
    }
};
